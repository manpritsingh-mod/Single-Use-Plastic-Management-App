<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/white"
    android:weightSum="10">
    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="104dp"
        android:layout_marginTop="12dp"
        android:layout_weight="2">
        <ImageView
            android:id="@+id/btnRequest"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/btn_bg"
            android:padding="12dp"
            android:src="@drawable/donate"
            android:backgroundTint="@color/menuItemColor"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Req"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="104dp"
        android:layout_marginTop="12dp"
        android:layout_weight="2">
        <ImageView
            android:id="@+id/btnCurrentStatus"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:padding="18dp"
            android:src="@drawable/ic_status"
            android:backgroundTint="@color/menuItemColor2"
            android:background="@drawable/btn_bg"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Req"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="104dp"
        android:layout_marginTop="12dp"
        android:layout_weight="2">
        <ImageView
            android:id="@+id/btnHistory"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:padding="12dp"
            android:src="@drawable/ic_history"
            android:backgroundTint="@color/menuItemColor1"
            android:background="@drawable/btn_bg" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="History"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="104dp"
        android:layout_marginTop="12dp"
        android:layout_weight="2">
        <ImageView
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:padding="20dp"
            android:src="@drawable/ic_logout"
            android:backgroundTint="@color/menuItemColor3"
            android:background="@drawable/btn_bg" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="sans-serif-condensed-light"
            android:text="Logout"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>